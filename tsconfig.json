{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@code/*": ["day3/*"]
    },
    "types": ["bun-types"]
  },
  "include": ["./src/**/*", "./scripts/*"],
  "exclude": ["node_modules"]
}
